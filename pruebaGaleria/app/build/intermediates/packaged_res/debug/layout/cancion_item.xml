<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="#222121"
    android:layout_marginTop="15dp"
    android:paddingRight="8dp">


    <ImageView
        android:id="@+id/foto"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/cancion"
        android:layout_marginRight="15dp"/>


    <TextView
        android:id="@+id/textViewCancion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/foto"
        android:text="Nombre Cancion"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textViewAutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCancion"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/foto"
        android:text="Autores"
        android:textColor="@color/white" />


</RelativeLayout>